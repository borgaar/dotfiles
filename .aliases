dotfiles() {
  (cd $HOME/.dotfiles && git --git-dir=$HOME/.dotfiles --work-tree=$HOME/.dotfiles $@)
}


help() {
    $HOME/applications/cht.sh "$@" | less
}

calc() {
  echo $1 | bc -l
}

encrypt() {
  tar -cvf encrypted.tar $1 && xz -9 encrypted.tar && gpg --symmetric encrypted.tar.xz
}
